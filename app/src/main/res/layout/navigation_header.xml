<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:id="@+id/llNavigationHeader"
    android:background="?android:colorBackground"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginStart="15dp"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon = "@drawable/ic_back_navigation"
        app:iconTint = "?attr/colorOnBackground"
        app:rippleColor="#1fffffff"
        />
<!--    <TextView-->
<!--        android:id="@+id/txtBackIcon"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:padding="10dp"-->
<!--        android:clickable="true"-->
<!--        android:layout_marginStart="10dp"-->
<!--        android:focusable="true"-->
<!--        android:layout_marginTop="5dp"-->
<!--        app:drawableLeftCompat="@drawable/ic_back_navigation" />-->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:contentDescription="@string/logo"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="@string/navigation_drawer"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_drawer"
        android:textSize="15sp"
        android:textColor="?attr/colorOnBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="10dp"
        />
</LinearLayout>